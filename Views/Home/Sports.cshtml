@using College.Entities
@model List<PageMedia>

<div class="health-care-area pt-100 pb-70 bg-f4f6f9">
    <div class="container">
        <div class="section-title mb-4">
            <h2>Sports</h2>
            <p>Our sports programs build teamwork, discipline, confidence and a strong competitive spirit among students.</p>
        </div>
        <div id="Sports-slider" class="health-care-slider owl-carousel owl-theme owl-loaded owl-drag">

            <div class="owl-stage-outer">
                <div class="owl-stage" style="transform: translate3d(-1326px, 0px, 0px); transition: all; width: 4421px;">

                    @foreach (var item in Model)
                    {
                        <div class="owl-item cloned" style="width: 412.007px; margin-right: 30px;">
                            <div class="single-health-care-card style-3">
                                <div class="img">
                                    <img src="@Url.Content(item.ImagePath)" alt="Image" />
                                </div>
                                @* <div class="health-care-content">
                                    <h3>@item.ShortContent</h3>
                                </div> *@
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="clsowlnave owl-nav">
                <button type="button" role="presentation" class="owl-prev"><i class="ri-arrow-left-line"></i></button>
                <button type="button" role="presentation" class="owl-next"><i class="ri-arrow-right-line"></i></button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#Sports-slider').owlCarousel({
        loop: true,
        margin: 30,
        nav: true,
        dots: false,
        thumbs: false,
        autoplay: false,
        smartSpeed: 1000,
        autoplayTimeout: 2500,
        autoplayHoverPause: true,
        navText: [
            '<i class="ri-arrow-left-line"></i>',
            '<i class="ri-arrow-right-line"></i>',
        ],
        responsive:{
            0:{
                items:1,
            },
            768:{
                items:2,
            },
            992:{
                items:3,
            },
            1200:{
                items:3,
            },
        }
    });
</script>