@using College.Entities
@model List<PageMedia>

<div class="events-area pt-100 pb-70 clsLatestNews" id="div-news">
    <div class="container">
        <div class="section-title mb-4">
            <h2>Latest News</h2>
            <p>Stay updated with the latest announcements, events, achievements and important notifications from our institution.</p>
        </div>
        

        <div id="LatestNews-slider" class="events-slider owl-carousel owl-theme owl-loaded owl-drag">

            <div class="owl-stage-outer">
                <div class="owl-stage" style="transform: translate3d(-1326px, 0px, 0px); transition: all; width: 4421px;">

                    @foreach (var item in Model)
                    {
                        <div class="owl-item cloned" style="width: 412.007px; margin-right: 30px;">
                            <div class="single-events-card style-3 mlr-5" onclick="InfoPopup(@item.Id)">
                                <div class="events-image">
                                    <img src="@Url.Content(item.ImagePath)" alt="Image">
                                </div>
                                <div class="events-content">
                                    <h3>@Html.Raw(item.Heading)</h3>
                                    <p>
                                        @Html.Raw(item.ShortContent)
                                    </p>
                                    <div class="date-and-read-more">
                                        <ul class="d-flex justify-content-between">
                                            <li>
                                                <p><i class="ri-calendar-2-line"></i>@(item.Date?.ToString("MMMM dd, yyyy"))</p>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="clsowlnave owl-nav">
                <button type="button" role="presentation" class="owl-prev"><i class="ri-arrow-left-line"></i></button>
                <button type="button" role="presentation" class="owl-next"><i class="ri-arrow-right-line"></i></button>
            </div>
        </div>
    </div>
</div>

<script>
    // Events-slider
    $('#LatestNews-slider').owlCarousel({
        loop: true,
        margin: 30,
        nav: true,
        dots: false,
        thumbs: false,
        autoplay: false,
        smartSpeed: 1000,
        autoplayHoverPause: true,
        navText: [
            '<i class="ri-arrow-left-line"></i>',
            '<i class="ri-arrow-right-line"></i>',
        ],
        responsive:{
            0:{
                items:1,
            },
            768:{
                items:2,
            },
            992:{
                items:3,
            },
            1200:{
                items:3,
            },

        }
    });
</script>
