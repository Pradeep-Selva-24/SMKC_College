@using College.Models
@model HomeModel

@{
    ViewData["Title"] = "Home";
}

<script src="~/js/owl.carousel.min.js"></script>
<link href="~/css/owl.carousel.min.css" rel="stylesheet" />
<!--Start Banner Area-->
@{
    @await Html.PartialAsync("Banner", Model.LstBanner);
}
<!--End Banner Area-->

<!--Start Education Area-->
<div class="eduction-area pb-70">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-3 col-md-6 aos-init" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="200" data-aos-once="true">
                <div class="single-education-card bg-1">
                    <div class="edication-content">
                        <a href="#div-news">
                            <div class="icon">
                                <i class="flaticon-college"></i>
                            </div>
                            <h3>Latest News</h3>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 aos-init" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="400" data-aos-once="true">
                <div class="single-education-card bg-2">
                    <div class="edication-content">
                        <a href="~/ProgrammesOffered/ProgrammesOffered">
                            <div class="icon">
                                <i class="flaticon-student-with-graduation-cap"></i>
                            </div>
                            <h3>Courses</h3>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 aos-init" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="600" data-aos-once="true">
                <div class="single-education-card bg-3">
                    <div class="edication-content">
                        <a href="~/Placement/Placement">
                            <div class="icon">
                                <i class="flaticon-college-graduation"></i>
                            </div>
                            <h3>Placement</h3>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 aos-init" data-aos="fade-up" data-aos-duration="1200" data-aos-delay="800" data-aos-once="true">
                <div class="single-education-card bg-4">
                    <div class="edication-content">
                        <a href="#div-campus-information">
                            <div class="icon">
                                <i class="flaticon-athletics"></i>
                            </div>
                            <h3>Campus Information</h3>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Education Area-->
<!--Start Campus Information-->
<div class="campus-information-area pb-70" id="div-campus-information">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="campus-image">
                    <img src="~/img/campusinformation/campusinformation_2.jpeg" alt="Image">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="campus-content style-2">
                    <div class="campus-title">
                        <h2>Campus Information</h2>
                        <p>Sree Muthukumaraswamy College, Chennai, offers a vibrant academic environment committed to excellence in education. With well-equipped facilities, experienced faculty and a student-centric approach, the campus fosters holistic development and a culture of continuous learning.</p>
                    </div>
                    <div class="list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <ul>
                                    <li>
                                        <i class="ri-check-fill"></i>
                                        <p>Undergraduate Programs</p>
                                    </li>
                                    <li>
                                        <i class="ri-check-fill"></i>
                                        <p>Postgraduate Programs</p>
                                    </li>
                                    <li>
                                        <i class="ri-check-fill"></i>
                                        <p>Research &amp; Development</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <ul>
                                    <li>
                                        <i class="ri-check-fill"></i>
                                        <p>Alumni Network</p>
                                    </li>
                                    <li>
                                        <i class="ri-check-fill"></i>
                                        <p>Student Development Cell</p>
                                    </li>
                                    <li>
                                        <i class="ri-check-fill"></i>
                                        <p>International Collaboration</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="counter">
                        <div class="row">
                            <div class="col-lg-4 col-4">
                                <div class="counter-card">
                                    <h1>
                                        <span class="odometer odometer-auto-theme" data-count="@Model.YearsOfExperience">
                                            <div class="odometer-inside">
                                                <span class="odometer-digit">
                                                    <span class="odometer-digit-spacer">8</span>
                                                    <span class="odometer-digit-inner">
                                                        <span class="odometer-ribbon">
                                                            <span class="odometer-ribbon-inner">
                                                                <span class="odometer-value">0</span>
                                                            </span>
                                                        </span>
                                                    </span>
                                                </span>
                                            </div>
                                        </span>

                                        <span class="target">+</span>
                                    </h1>
                                    <p>Years Of Experience</p>
                                </div>
                            </div>
                            <div class="col-lg-4 col-4">
                                <div class="counter-card">
                                    <h1>
                                        <span class="odometer odometer-auto-theme" data-count="@Model.Students">
                                            <div class="odometer-inside">
                                                <span class="odometer-digit">
                                                    <span class="odometer-digit-spacer">8</span>
                                                    <span class="odometer-digit-inner">
                                                        <span class="odometer-ribbon">
                                                            <span class="odometer-ribbon-inner">
                                                                <span class="odometer-value">0</span>
                                                            </span>
                                                        </span>
                                                    </span>
                                                </span>
                                            </div>
                                        </span>
                                        <span class="target heading-color">k</span><span class="target">+</span>
                                    </h1>
                                    <p>Students</p>
                                </div>
                            </div>
                            <div class="col-lg-4 col-4">
                                <div class="counter-card">
                                    <h1>
                                        <span class="odometer odometer-auto-theme" data-count="@Model.StaffMembers">
                                            <div class="odometer-inside">
                                                <span class="odometer-digit">
                                                    <span class="odometer-digit-spacer">8</span>
                                                    <span class="odometer-digit-inner">
                                                        <span class="odometer-ribbon">
                                                            <span class="odometer-ribbon-inner">
                                                                <span class="odometer-value">0</span>
                                                            </span>
                                                        </span>
                                                    </span>
                                                </span>
                                            </div>
                                        </span>
                                        <span class="target">+</span>
                                    </h1>
                                    <p>Staff Members</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a href="#" class="default-btn btn clsApplication">Start your application<i class="flaticon-next"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Campus Information-->

<!--Management Area-->
@{
    @await Html.PartialAsync("Management", Model.LstManagementDTO);
}
<!--Management Area-->

<!--Start Campus Life Area-->
@{
    @await Html.PartialAsync("CampusLife", Model.LstCampusLife);
}
<!--End Campus Life Area-->

<!--Start Sports Area-->
@{
    @await Html.PartialAsync("Sports", Model.LstSports);
}
<!--End Sports Area-->

<!--Start News Area-->
@{
    @await Html.PartialAsync("LatestNews", Model.LstLatestNews);
}
<!--End News Area-->

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-Home").addClass("active");
    });

    
</script>