@using College.Entities
@model List<ProgrammesOffered>

@{
    ViewData["Title"] = "Programmes Offered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Start Page Banner-->
<div class="page-banner-area bg-1">
    <div class="container">
        <div class="page-banner-content">
            <h1>Programmes Offered</h1>
            <ul>
                <li><a href="~/">Home</a></li>
                <li>Programmes Offered</li>
            </ul>
        </div>
    </div>
</div>
<!--End Page Banner-->
<!--Start Courses Area-->
<div class="courses-area pt-100 pb-70">
    <div class="container">

        <!-- Undergraduate Programmes -->
        @if (Model.Where(x => x.Category == "UG").Count() > 0)
        {
            <div>
                <h2 class="mb-4">Undergraduate Programmes (UG)</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="courses-left-content">
                        <div class="row">

                            @foreach (var item in Model.Where(x => x.Category == "UG").ToList())
                            {
                                <div class="col-lg-4 col-md-4">
                                    <div class="single-courses-card style4">
                                        <div class="courses-img">
                                            <img src="@Url.Content(item.ImagePath)" alt="Image">
                                        </div>
                                        <div class="courses-content">
                                            <h3>@item.Course</h3>
                                            <div class="bottom-content">
                                                <ul class="d-flex justify-content-between">
                                                    <li>
                                                        <ul>
                                                            <li><i class="flaticon-graduation"></i>@item.StudentCount</li>
                                                        </ul>
                                                    </li>
                                                    <li>
                                                        <ul>
                                                            @if (!string.IsNullOrEmpty(item.SyllabusPath))
                                                            {
                                                                <li><a href="@Url.Content(item.SyllabusPath)" target="_blank" data-bs-toggle="tooltip" title="Syllabus"><i class="flaticon-case-study"></i></a>&nbsp;</li>
                                                            }
                                                        </ul>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }       

        <!-- Postgraduate Programmes -->
        @if (Model.Where(x => x.Category == "PG").Count() > 0)
        {
            <div>
                <h2 class="mb-4">Postgraduate Programmes (PG)</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="courses-left-content">
                        <div class="row">

                            @foreach (var item in Model.Where(x => x.Category == "PG").ToList())
                            {
                                <div class="col-lg-4 col-md-4">
                                    <div class="single-courses-card style4">
                                        <div class="courses-img">
                                            <img src="@Url.Content(item.ImagePath)" alt="Image">
                                        </div>
                                        <div class="courses-content">
                                            <h3>@item.Course</h3>
                                            <div class="bottom-content">
                                                <ul class="d-flex justify-content-between">
                                                    <li>
                                                        <ul>
                                                            <li><i class="flaticon-graduation"></i>@item.StudentCount</li>
                                                        </ul>
                                                    </li>
                                                    <li>
                                                        <ul>
                                                            @if (!string.IsNullOrEmpty(item.SyllabusPath))
                                                            {
                                                                <li><a href="@Url.Content(item.SyllabusPath)" target="_blank" data-bs-toggle="tooltip" title="Syllabus"><i class="flaticon-case-study"></i></a>&nbsp;</li>
                                                            }
                                                        </ul>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Research Programme -->
        @if (Model.Where(x => x.Category == "Ph.D").Count() > 0)
        {
            <div>
                <h2 class="mb-4">Research Programme (Ph.D)</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="courses-left-content">
                        <div class="row">

                            @foreach (var item in Model.Where(x => x.Category == "Ph.D").ToList())
                            {
                                <div class="col-lg-4 col-md-4">
                                    <div class="single-courses-card style4">
                                        <div class="courses-img">
                                            <img src="@Url.Content(item.ImagePath)" alt="Image">
                                        </div>
                                        <div class="courses-content">
                                            <h3>@item.Course</h3>
                                            <div class="bottom-content">
                                                <ul class="d-flex justify-content-between">
                                                    <li>
                                                        <ul>
                                                            <li><i class="flaticon-graduation"></i>@item.StudentCount</li>
                                                        </ul>
                                                    </li>
                                                    <li>
                                                        <ul>
                                                            @if (!string.IsNullOrEmpty(item.SyllabusPath))
                                                            {
                                                                <li><a href="@Url.Content(item.SyllabusPath)" target="_blank" data-bs-toggle="tooltip" title="Syllabus"><i class="flaticon-case-study"></i></a>&nbsp;</li>
                                                            }
                                                        </ul>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<!--End Courses Area-->

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-Academics").addClass("active");
        $("#navbarSupportedContent .clsMenu-ProgrammesOffered").addClass("active");
    });
</script>