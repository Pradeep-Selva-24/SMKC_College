<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>College Admin Dashboard</title>

    <!--Bootstrap Css-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!--Mean menu.css-->
    <link rel="stylesheet" href="~/css/meanmenu.css">
    <!--Owl carousel-->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <!--Owl Theme-->
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <!--=== Magnific Popup Min CSS ===-->
    <link rel="stylesheet" href="~/css/magnific-popup.min.css">
    <!--Flat icon-->
    <link rel="stylesheet" href="~/css/flaticon.css">
    <!--Remix icon-->
    <link rel="stylesheet" href="~/css/remixicon.css">
    <!--Odometer-->
    <link rel="stylesheet" href="~/css/odometer.min.css">
    <!--Aos css-->
    <link rel="stylesheet" href="~/css/aos.css">
    <!--Style css-->
    <link rel="stylesheet" href="~/css/style.css">
    <!--Dark css-->
    <link rel="stylesheet" href="~/css/dark.css">
    <!--Responsive css-->
    <link rel="stylesheet" href="~/css/responsive.css">

    <!--Custom css-->
    <link href="~/css/college.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.css" rel="stylesheet">

    <!--=== Title ===-->
    <title>SMKC - @ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/img/logo/favicon.png">
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!--=== MeanMenu js ===-->
    <script src="~/js/jquery.meanmenu.js"></script>
    <!--=== Owl Carousel Min js ===-->
    <script src="~/js/owl.carousel.min.js"></script>
    <!--=== Owl Carousel Thumbs Min js ===-->
    <script src="~/js/carousel-thumbs.min.js"></script>
    <!--=== Magnific popup Min js ===-->
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <!-- Aos js -->
    <script src="~/js/aos.js"></script>
    <!-- Odometer js -->
    <script src="~/js/odometer.min.js"></script>
    <!-- Appear js -->
    <script src="~/js/appear.min.js"></script>
    <!-- Form Validator js -->
    <script src="~/js/form-validator.min.js"></script>
    <!-- Contact Form Script js -->
    <script src="~/js/contact-form-script.js"></script>
    <!--=== AjaxChimp js ===-->
    <script src="~/js/ajaxchimp.min.js"></script>
    <!--=== Custom js ===-->
    <script src="~/js/custom.js"></script>
    <!--=== Layout js ===-->
    <script src="~/js/Layout.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.js"></script>

    <!-- Start Preloader Area -->
    <div class="clsPreloaderArea" style="display:none;">
        <div class="spinner">
            <img src="~/img/loader/murugan.png" />
        </div>
    </div>

    <!-- Header -->
    <div class="top-header">
        <div class="d-flex align-items-center gap-3">
            <i class="bi bi-list menu-toggle" id="menuToggle"></i>

            <!-- Logo + Title -->
            <div class="d-flex align-items-center gap-2">
                <img src="~/img/logo/logo.png"
                     alt="Sree Muthukumaraswamy College"
                     class="college-logo-wide" />
            </div>
        </div>

        <a href="~/Login/Logout" class="clsLogout">
            <i class="bi bi-power fs-4"></i>
        </a>
    </div>


    <!-- Layout -->
    <div class="layout">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">

            <a href="/Admin/Dashboard" class="active">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>

            <!-- Settings (Only one with submenu) -->
            <div class="menu-group">
                <a href="#" class="menu-toggle-item" id="settingsToggle">
                    <i class="bi bi-gear"></i> Settings
                    <i class="bi bi-chevron-down ms-auto" id="settingsArrow"></i>
                </a>

                <div class="submenu" id="settingsMenu">
                    <a href="/Admin/Menu">Menu</a>
                    <a href="/Admin/CampusInfo">Campus Info</a>
                </div>
            </div>

            <!-- Flat Links -->
            <a href="/Admin/Management">
                <i class="bi bi-building"></i> Management
            </a>

            <a href="/Admin/Programmes">
                <i class="bi bi-journal-bookmark"></i> Programmes Offered
            </a>

            <a href="/Admin/Placement">
                <i class="bi bi-briefcase"></i> Placement & Career Development
            </a>

            <a href="/Admin/PageMedia">
                <i class="bi bi-image"></i> Page Media
            </a>

            <a href="/Admin/Institution">
                <i class="bi bi-bank"></i> Institution
            </a>

            <a href="/Admin/Clubs">
                <i class="bi bi-people"></i> Clubs & Activities
            </a>

        </div>

        <!-- Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script>
        $(document).ready(function () {

            var currentPath = window.location.pathname.toLowerCase();
            $('#sidebar a[href]').removeClass('active')
            // Highlight active link
            $('#sidebar a[href]').each(function () {
                var linkPath = $(this).attr('href').toLowerCase();

                if (currentPath === linkPath || currentPath.startsWith(linkPath + "/")) {
                    $(this).addClass('active');

                    // If inside submenu, open parent
                    var submenu = $(this).closest('.submenu');
                    if (submenu.length) {
                        submenu.addClass('show');

                        var toggle = submenu.prev('.menu-toggle-item');
                        if (toggle.length) {
                            toggle.addClass('active');
                            $('#settingsArrow').addClass('rotate');
                        }
                    }
                }
            });
        });

        const toggle = document.getElementById("menuToggle");
        const sidebar = document.getElementById("sidebar");

        toggle.addEventListener("click", () => {
          sidebar.classList.toggle("show");
        });

        document.querySelectorAll(".menu-toggle-item").forEach(item => {
          item.addEventListener("click", function (e) {
            e.preventDefault();

            const submenu = this.nextElementSibling;
            const icon = this.querySelector(".bi-chevron-down");

            submenu.style.display =
              submenu.style.display === "block" ? "none" : "block";

            icon.classList.toggle("rotate");
          });
        });
    </script>
</body>
</html>
