@using College.Entities
@model List<PageMedia>

@{
    ViewData["Title"] = "Alumni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alumni-area">
    <!--Start Page Banner-->
    <div class="page-banner-area bg-1">
        <div class="container">
            <div class="page-banner-content">
                <h1>Alumni</h1>
                <ul>
                    <li><a href="~/">Home</a></li>
                    <li>Alumni</li>
                </ul>
            </div>
        </div>
    </div>
    <!--End Page Banner-->
    <!--Start Alumni Content Area-->
    <div class="alumni-area ptb-100">
        <div class="container">
            <div class="section-title mb-4">
                <h2>Our Proud Alumni</h2>
                <p>Sree Muthukumaraswamy College takes immense pride in its vibrant alumni community. Our graduates have excelled in diverse fields — contributing to business, education, technology and public service. The Alumni Association serves as a bridge connecting the past and present, fostering lifelong learning and collaboration.</p>
            </div>

            <div class="row align-items-center">
                <div class="col-lg-6">
                    <p>
                        The Alumni Association regularly organizes reunions, seminars and mentorship programs to strengthen bonds between alumni and current students. Our alumni play a vital role in career guidance, guest lectures and social outreach initiatives.
                    </p>
                    <ul>
                        <li>Annual Alumni Meet & Networking Events</li>
                        <li>Career Guidance & Mentorship Sessions</li>
                        <li>Guest Lectures by Distinguished Alumni</li>
                        <li>Scholarship & Support Initiatives</li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <img src="~/img/alumni/alumni_2.jpeg" class="img-fluid rounded shadow" alt="Alumni Meet">
                </div>
            </div>
        </div>
    </div>
    <!--End Alumni Content Area-->
    <!--Start Alumni Gallery-->

    <div class="gallery-area pb-100">
        <div class="container">
            <div class="section-title mb-4">
                <h2>Alumni Gallery</h2>
                <p>Glimpses from our Alumni Meet, Events and Celebrations.</p>
            </div>

            <div class="alumni-slider courses-slider style-2 owl-carousel owl-theme">

                @foreach (var item in Model)
                {
                    <div class="single-courses-card style3">
                        <div class="gallery-item" onclick="InfoPopup(@item.Id)">
                            <img src="@Url.Content(item.ImagePath)" class="img-fluid rounded shadow-sm" alt="@item.Heading">
                            <div class="gallery-caption">
                                <p>@item.Heading</p>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
    <!--End Alumni Gallery-->
</div>

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-CampusLife").addClass("active");
        $("#navbarSupportedContent .clsMenu-Alumni").addClass("active");

        $('.alumni-slider').owlCarousel({
            loop: true,
        margin: 30,
        nav: true,
        dots: true,
        thumbs: false,
        autoplay: false,
        smartSpeed: 1000,
        autoplayHoverPause: true,
        navText: [
            '<i class="ri-arrow-left-line"></i>',
            '<i class="ri-arrow-right-line"></i>',
        ],
        responsive:{
            0:{
                items:1,
            },
            768:{
                items:2,
            },
            992:{
                items:3,
            },
            1200:{
                items:3,
            },

        }
        });
    });

    
</script>