@using College.Entities
@model List<PageMedia>

@{
    ViewData["Title"] = "Events & Gallery";
}

<!--Start Page Banner-->
<div class="page-banner-area bg-1">
    <div class="container">
        <div class="page-banner-content">
            <h1>Events</h1>
            <ul>
                <li><a href="~/">Home</a></li>
                <li>Events & Gallery</li>
            </ul>
        </div>
    </div>
</div>
<!--End Page Banner-->
<!--Start Events Area-->
<div class="events-area pt-100 pb-70">
    <div class="container">
        <div class="row justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-events-card style-4">
                        <div class="events-image">
                            <img src="@Url.Content(item.ImagePath)" alt="Image">
                            <div class="date">

                                @{
                                    var date = item.Date ?? DateTime.Now;
                                    var day = date.Day;
                                    var month = date.ToString("MMM");
                                }

                                <span>@day</span>
                                <p>@month</p>
                            </div>
                        </div>
                        <div class="events-content">
                            <div class="mt-20">
                                <h3>@item.Heading</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</div>
<!--End Events Area-->

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-CampusLife").addClass("active");
        $("#navbarSupportedContent .clsMenu-EventsGallery").addClass("active");
    });
</script>