<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SMC Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --primary: #0b1e5b;
            --accent: #d32f2f;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #0b1e5b, #102a7a);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
        }

        .login-card {
            background: #fff;
            width: 100%;
            max-width: 420px;
            border-radius: 10px;
            box-shadow: 0 15px 35px rgba(0,0,0,.3);
        }

        .login-header {
            background: var(--primary);
            color: #fff;
            padding: 20px;
            text-align: center;
            border-radius: 10px 10px 0 0;
        }

        .btn-login {
            background: var(--accent);
            color: #fff;
            font-weight: 600;
        }

            .btn-login:hover {
                background: #b71c1c;
                color: #fff;
            }

        .form-control:focus {
            border-color: var(--accent);
            box-shadow: none;
        }

        .toggle-password {
            cursor: pointer;
        }
    </style>
</head>

<body>

    <div class="login-card">

        <!-- HEADER -->
        <div class="login-header">
            <h5 class="mb-0">Sree Muthukumaraswamy College</h5>
            <small>Admin Login</small>
        </div>

        <!-- BODY -->
        <div class="p-4">

            <div id="alertBox"></div>

            <form id="loginForm">

                <!-- USERNAME -->
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" placeholder="Enter username">
                    <small class="text-danger d-none" id="userError">Username is required</small>
                </div>

                <!-- PASSWORD -->
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <input type="password" id="password" class="form-control" placeholder="Enter password">
                        <span class="input-group-text toggle-password" onclick="togglePassword()">
                            <i class="bi bi-eye" id="eyeIcon"></i>
                        </span>
                    </div>
                    <small class="text-danger d-none" id="passError">Password is required</small>
                </div>

                <!-- REMEMBER -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label">Remember Me</label>
                </div>

                <!-- SUBMIT -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-login">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                </div>

            </form>

        </div>

        <div class="text-center p-3 text-muted">
            © 2026 SMC Admin Panel
        </div>
    </div>

    <script>
        // PREFILL SAVED USERNAME
        window.onload = () => {
            const savedUser = localStorage.getItem("smcUser");
            if (savedUser) {
                document.getElementById("username").value = savedUser;
                document.getElementById("rememberMe").checked = true;
            }
        };

        // TOGGLE PASSWORD
        function togglePassword() {
            const pwd = document.getElementById("password");
            const icon = document.getElementById("eyeIcon");

            if (pwd.type === "password") {
                pwd.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                pwd.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        }

        // LOGIN SUBMIT
        document.getElementById("loginForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const username = document.getElementById("username").value.trim();
            const password = document.getElementById("password").value.trim();
            const remember = document.getElementById("rememberMe").checked;

            let valid = true;

            document.getElementById("userError").classList.add("d-none");
            document.getElementById("passError").classList.add("d-none");

            if (!username) {
                document.getElementById("userError").classList.remove("d-none");
                valid = false;
            }

            if (!password) {
                document.getElementById("passError").classList.remove("d-none");
                valid = false;
            }

            if (!valid) return;

            // DEMO CREDENTIALS
            if (username === "admin" && password === "admin123") {

                if (remember) {
                    localStorage.setItem("smcUser", username);
                } else {
                    localStorage.removeItem("smcUser");
                }

                showAlert("Login successful! Redirecting...", "success");

                setTimeout(() => {
                    window.location.href = "admin-dashboard.html"; // change later for MVC
                }, 1200);

            } else {
                showAlert("Invalid username or password", "danger");
            }
        });

        // ALERT
        function showAlert(msg, type) {
            document.getElementById("alertBox").innerHTML = `
                <div class="alert alert-${type} alert-dismissible fade show">
                    ${msg}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
        }
    </script>

</body>
</html>
