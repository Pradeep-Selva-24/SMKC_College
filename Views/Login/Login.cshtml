@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Bootstrap Css-->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!--Mean menu.css-->
    <link rel="stylesheet" href="~/css/meanmenu.css">
    <!--Owl carousel-->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <!--Owl Theme-->
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <!--=== Magnific Popup Min CSS ===-->
    <link rel="stylesheet" href="~/css/magnific-popup.min.css">
    <!--Flat icon-->
    <link rel="stylesheet" href="~/css/flaticon.css">
    <!--Remix icon-->
    <link rel="stylesheet" href="~/css/remixicon.css">
    <!--Odometer-->
    <link rel="stylesheet" href="~/css/odometer.min.css">
    <!--Aos css-->
    <link rel="stylesheet" href="~/css/aos.css">
    <!--Style css-->
    <link rel="stylesheet" href="~/css/style.css">
    <!--Dark css-->
    <link rel="stylesheet" href="~/css/dark.css">
    <!--Responsive css-->
    <link rel="stylesheet" href="~/css/responsive.css">

    <!--Custom css-->
    <link href="~/css/college.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />

    <!--=== Title ===-->
    <title>SMKC - Admin Login</title>
    <link rel="icon" type="image/png" href="~/img/logo/favicon.png">
</head>

<body class="clsLogin">
    <!--=== MeanMenu js ===-->
    <script src="~/js/jquery.meanmenu.js"></script>
    <!--=== Owl Carousel Min js ===-->
    <script src="~/js/owl.carousel.min.js"></script>
    <!--=== Owl Carousel Thumbs Min js ===-->
    <script src="~/js/carousel-thumbs.min.js"></script>
    <!--=== Magnific popup Min js ===-->
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <!-- Aos js -->
    <script src="~/js/aos.js"></script>
    <!-- Odometer js -->
    <script src="~/js/odometer.min.js"></script>
    <!-- Appear js -->
    <script src="~/js/appear.min.js"></script>
    <!-- Form Validator js -->
    <script src="~/js/form-validator.min.js"></script>
    <!-- Contact Form Script js -->
    <script src="~/js/contact-form-script.js"></script>
    <!--=== AjaxChimp js ===-->
    <script src="~/js/ajaxchimp.min.js"></script>
    <!--=== Custom js ===-->
    <script src="~/js/custom.js"></script>
    <!--=== Layout js ===-->
    <script src="~/js/Layout.js"></script>

    <div class="login-card">

        <!-- HEADER -->
        <div class="login-header">
            <img src="~/img/logo/s_logo.png" alt="College Logo" class="college-logo" />
        </div>

        <!-- BODY -->
        <div class="p-4">

            @* SERVER SIDE ERROR *@
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <!-- USERNAME -->
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" placeholder="Enter username" required />
                </div>

                <!-- PASSWORD -->
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" required />
                        <span class="input-group-text toggle-password" onclick="togglePassword()">
                            <i class="bi bi-eye" id="eyeIcon"></i>
                        </span>
                    </div>
                </div>

                <!-- SUBMIT -->
                <div class="d-grid mt-4">
                    <button type="submit" class="default-btn btn">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                </div>

            </form>

        </div>

        <div class="text-center p-3 text-muted">
            © 2026 SMC Admin Panel
        </div>
    </div>

    <script>
        function togglePassword() {
            const pwd = document.getElementById("password");
            const icon = document.getElementById("eyeIcon");

            if (pwd.type === "password") {
                pwd.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                pwd.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        }
    </script>

</body>
</html>
