@{
    ViewData["Title"] = "NAAC";
}

<div class="naac-area">
    <!--Start Page Banner-->
    <div class="page-banner-area bg-2">
        <div class="container">
            <div class="page-banner-content">
                <h1>NAAC Accreditation</h1>
                <ul>
                    <li><a href="~/">Home</a></li>
                    <li>NAAC</li>
                </ul>
            </div>
        </div>
    </div>
    <!--End Page Banner-->
    <!--Start NAAC Area-->
    <div class="ptb-100">
        <div class="container">

            <div class="section-title mb-4">
                <h2>NAAC Accreditation</h2>
                <p>
                    The <strong>National Assessment and Accreditation Council (NAAC)</strong> assesses and accredits institutions of higher education in India
                    to ensure quality in academic processes, teaching, research and infrastructure.
                </p>
            </div>

            <div class="row align-items-center mb-5">
                <div class="col-lg-6">
                    <div class="naac-content pe-lg-4">
                        <h3>About NAAC</h3>
                        <p>
                            The NAAC is an autonomous body established by the University Grants Commission (UGC)
                            of India to evaluate and accredit institutions of higher education. The accreditation
                            process encourages educational institutions to self-evaluate, improve their internal
                            quality systems and demonstrate accountability and transparency.
                        </p>

                        <h4>Objectives of NAAC Accreditation</h4>
                        <ul>
                            <li>Promote quality in teaching, learning and research.</li>
                            <li>Encourage institutional accountability and continuous improvement.</li>
                            <li>Enhance credibility among students, parents and stakeholders.</li>
                            <li>Facilitate funding and collaborations through accreditation recognition.</li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="naac-image text-center">
                        <img src="~/img//naac/certificate_of_accreditation.jpg" class="img-fluid rounded shadow-sm" alt="NAAC Accreditation">
                    </div>
                </div>
            </div>

            <!-- Accreditation Details -->
            <div class="accreditation-details mb-5">
                <h3 class="text-center mb-4">Accreditation Details</h3>

                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-center">
                        <thead>
                            <tr>
                                <th>Details</th>
                                <th>Information</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Name of the Institution</td>
                                <td><strong>Sree Muthukumaraswamy College</strong></td>
                            </tr>
                            <tr>
                                <td>Accrediting Agency</td>
                                <td>National Assessment and Accreditation Council (NAAC)</td>
                            </tr>
                            <tr>
                                <td>Affiliated To</td>
                                <td>University of Madras</td>
                            </tr>
                            <tr>
                                <td>Accreditation Status</td>
                                <td>Accredited (Cycle 1)</td>
                            </tr>
                            <tr>
                                <td>Grade Awarded</td>
                                <td><strong>B+</strong></td>
                            </tr>
                            <tr>
                                <td>Year of Accreditation</td>
                                <td>2023</td>
                            </tr>
                            <tr>
                                <td>Validity Period</td>
                                <td>2023 – 2028</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Documents Section -->
            <div class="naac-documents mb-5">
                <h3 class="text-center mb-4">NAAC Documents & Reports</h3>

                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th>Document</th>
                                <th>Download</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>SSR (Self Study Report)</td>
                                <td><a href="~/pdf/naac/ssr.pdf" class="default-btn btn">Download</a></td>
                            </tr>
                            <tr>
                                <td>DVV Clarifications</td>
                                <td><a href="~/pdf/naac/dvv-clarifications.pdf" class="default-btn btn">Download</a></td>
                            </tr>
                            <tr>
                                <td>Peer Team Report</td>
                                <td><a href="~/pdf/naac/peer-team-report.pdf" class="default-btn btn">Download</a></td>
                            </tr>
                            <tr>
                                <td>Accreditation Certificate</td>
                                <td><a href="~/pdf/naac/accreditation-certificate.pdf" class="default-btn btn">Download</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Certificate Image -->
            <div class="text-center">
                <img src="~/img//naac/naac_a.jpg" class="img-fluid rounded shadow-sm" alt="NAAC Certificate" style="max-width:600px;">
                <p class="mt-3 text-muted">NAAC Accreditation Certificate – Sree Muthukumaraswamy College</p>
            </div>

        </div>
    </div>
    <!--End NAAC Area-->
</div>

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-QualityAssurance").addClass("active");
        $("#navbarSupportedContent .clsMenu-NAAC").addClass("active");
    });
</script>