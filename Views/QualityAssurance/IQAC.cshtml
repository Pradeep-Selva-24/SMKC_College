@using College.Models
@model IQACModel

@{
    ViewData["Title"] = "IQAC Committee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="iqac-area">
    <!--Start Page Banner-->
    <div class="page-banner-area bg-2">
        <div class="container">
            <div class="page-banner-content">
                <h1>IQAC Committee</h1>
                <ul>
                    <li><a href="~/">Home</a></li>
                    <li>IQAC Committee</li>
                </ul>
            </div>
        </div>
    </div>
    <!--End Page Banner-->
    <!--Start IQAC Committee Area-->
    <div class="ptb-100">
        <div class="container">
            <div class="section-title mb-4">
                <h2>Internal Quality Assurance Cell (IQAC)</h2>
                <p>
                    The <strong>Internal Quality Assurance Cell (IQAC)</strong> of
                    <strong>Sree Muthukumaraswamy College</strong> is established to enhance and sustain
                    quality in all aspects of institutional functioning — academic, administrative and co-curricular.
                </p>
            </div>

            <div class="iqac-objectives mb-5">
                <h4 class="text-primary mb-3">Objectives of IQAC</h4>
                <ul>
                    <li>To develop a system for conscious, consistent and catalytic improvement in the overall performance of the institution.</li>
                    <li>To promote measures for institutional functioning towards quality enhancement through internalization of quality culture.</li>
                    <li>To ensure continuous improvement in the teaching-learning process, evaluation and support services.</li>
                </ul>
            </div>

            <div class="section-title mb-4">
                <h4 class="text-primary">IQAC Committee Members</h4>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered align-middle text-center shadow-sm">
                    <thead class="table-light">
                        <tr>
                            <th>S.No</th>
                            <th>Name</th>
                            <th>Designation</th>
                            <th>Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LstIQACMembers)
                        {
                            <tr>
                                <td>@item.Order</td>
                                <td><strong>@item.Name</strong></td>
                                <td>@item.Designation</td>
                                <td>@item.Role</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-5">
                <h4 class="text-primary mb-3">Functions of IQAC</h4>
                <ul>
                    <li>Developing and implementing quality benchmarks for academic and administrative activities.</li>
                    <li>Facilitating a learner-centric environment and ensuring quality teaching practices.</li>
                    <li>Documenting various quality improvement activities of the institution.</li>
                    <li>Preparing the Annual Quality Assurance Report (AQAR) and submitting it to NAC.</li>
                    <li>Organizing seminars, workshops and feedback sessions for continuous enhancement.</li>
                </ul>
            </div>

            <!-- Documents Section -->
            <div class="mt-5">
                <h3 class="text-primary mb-4">Feedback</h3>

                <div class="table-responsive">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th>Feedback</th>
                                <th>Download</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LstIQACDocument)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td><a href="@Url.Content(item.Path)" target="_blank" class="default-btn btn">Download</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <!--End IQAC Committee Area-->
</div>

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-QualityAssurance").addClass("active");
        $("#navbarSupportedContent .clsMenu-IQAC").addClass("active");
    });
</script>