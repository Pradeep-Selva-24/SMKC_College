@using College.Models
@model NIRFModel

@{
    ViewData["Title"] = "NIRF";
}

<!--Start Page Banner-->
<div class="page-banner-area bg-1">
    <div class="container">
        <div class="page-banner-content">
            <h1>NIRF</h1>
            <ul>
                <li><a href="~/">Home</a></li>
                <li>NIRF</li>
            </ul>
        </div>
    </div>
</div>
<!--End Page Banner-->
<!--Start NIRF Area-->
<div class="nirf-area ptb-100">
    <div class="container">

        <!-- Section Title -->
        <div class="section-title text-center mb-5">
            <h2>National Institutional Ranking Framework (NIRF)</h2>
            <p>
                The <strong>National Institutional Ranking Framework (NIRF)</strong> was launched by the Ministry of Education, Government of India,
                to rank higher educational institutions in the country based on objective and comprehensive criteria.
            </p>
        </div>

        <!-- About NIRF -->
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <div class="nirf-content pe-lg-4">
                    <h3>About NIRF</h3>
                    <p>
                        NIRF provides a framework to evaluate institutions across India based on various parameters such as teaching, learning & resources,
                        research, graduation outcomes, outreach and perception. It ensures transparency and encourages continuous improvement in higher education standards.
                    </p>
                    <h4>Key Parameters of NIRF</h4>
                    <ul>
                        <li>Teaching, Learning & Resources (TLR)</li>
                        <li>Research & Professional Practices (RP)</li>
                        <li>Graduation Outcomes (GO)</li>
                        <li>Outreach & Inclusivity (OI)</li>
                        <li>Perception (PR)</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-6 text-center">
                <img src="~/img//nirf/nirf-banner.png" class="img-fluid rounded shadow-sm" alt="NIRF Overview">
            </div>
        </div>

        <!-- Institution NIRF Details -->
        <div class="nirf-details mb-5">
            <h3 class="text-center mb-4">Institution Participation Details</h3>

            <div class="table-responsive">
                <table class="table table-bordered text-center align-middle">
                    <thead>
                        <tr>
                            <th>Details</th>
                            <th>Information</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LstNIRFDetails)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- NIRF Ranking Table -->
        <div class="nirf-ranking mb-5">
            <h3 class="text-center mb-4">NIRF Ranking Overview</h3>
            <div class="table-responsive">
                <table class="table table-bordered text-center align-middle">
                    <thead>
                        <tr>
                            <th>Year</th>
                            <th>Category</th>
                            <th>Participation Status</th>
                            <th>Score / Ranking</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LstNIRFDocumentRanking)
                        {
                            <tr>
                                <td>@item.Year</td>
                                <td>@item.Category</td>
                                <td>@item.ParticipationStatus</td>
                                <td>@item.Score</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- NIRF Document Downloads -->
        <div class="nirf-documents mb-5">
            <h3 class="text-center mb-4">NIRF Documents & Reports</h3>

            <div class="table-responsive">
                <table class="table table-bordered text-center align-middle">
                    <thead>
                        <tr>
                            <th>Document</th>
                            <th>Year</th>
                            <th>Download</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LstNIRFDocument)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Year</td>
                                <td>
                                    <a href="@Url.Content(item.Path)" class="default-btn btn">
                                        <i class="bi bi-file-earmark-pdf"></i> Download
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- NIRF Logo & Link -->
        <div class="text-center">
            <a href="https://www.nirfindia.org" target="_blank">
                <img src="~/img//nirf/nirf-logo.png" alt="NIRF Logo" class="img-fluid mb-3" style="max-width:250px;">
            </a>
            <p>
                Visit the official NIRF website for more details:<br>
                <a href="https://www.nirfindia.org" target="_blank" style="color:#e32845;">www.nirfindia.org</a>
            </p>
        </div>

    </div>
</div>
<!--End NIRF Area-->

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-QualityAssurance").addClass("active");
        $("#navbarSupportedContent .clsMenu-NIRF").addClass("active");
    });
</script>