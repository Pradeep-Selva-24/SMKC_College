@using College.Models
@model PlacementModel

@{
    ViewData["Title"] = "Placement & Career Development";
}

<!--Start Page Banner-->
<div class="page-banner-area bg-1">
    <div class="container">
        <div class="page-banner-content">
            <h1>Placement & Career Development</h1>
            <ul>
                <li><a href="~/">Home</a></li>
                <li>Placement & Career Development</li>
            </ul>
        </div>
    </div>
</div>
<!--End Page Banner-->
<!--Start Placement Area-->
<div class="placement-area pt-100 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">Introduction</h2>
                    <p>
                        The Placement & Career Development Cell of our college works continuously to connect students with the best career opportunities. We focus on skill development, industry exposure and ensuring every student is prepared to step into the professional world with confidence. Empowering students with skills, guidance and opportunities for a successful career.
                    </p>
                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">About the Placement Cell</h2>
                    <p>
                        Our Placement Cell acts as a bridge between students and the corporate world. We conduct regular training programs, workshops, seminars and mock interviews to help students enhance their career readiness. The cell works closely with various companies to facilitate campus recruitment drives every academic year.
                    </p>
                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">Objectives of the Placement Cell</h2>
                    <ul>
                        <li>To provide career guidance and counseling.</li>
                        <li>To organize campus interviews and job fairs.</li>
                        <li>To improve students’ employability skills.</li>
                        <li>To create strong industry–academia connections.</li>
                        <li>To train students in communication and soft skills.</li>
                        <li>To prepare students for competitive exams and higher studies.</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">Training & Development Activities</h2>
                    <ul>
                        <li>Resume building & LinkedIn profile workshop</li>
                        <li>Aptitude training sessions</li>
                        <li>Group discussions & mock interviews</li>
                        <li>Technical skill development</li>
                        <li>Personality development & soft-skills training</li>
                        <li>Guest lectures from industry experts</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">Top Recruiters</h2>

                    <div class="company-slider owl-carousel owl-theme owl-loaded owl-drag">

                        @foreach (var item in Model.LstCompany)
                        {
                            <div class="company-slider-card style-3">
                                <div class="img">
                                    <img src="@Url.Content(item.ImagePath)" />
                                </div>
                            </div>
                        }

                    </div>

                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">MoUs & Industry Partnerships</h2>
                    <p>
                        Our college has signed Memorandums of Understanding (MoUs) with leading industries and training partners to enhance student employability. Through these collaborations, students receive opportunities for internships, technical training, workshops, industrial visits and campus recruitment support.
                    </p>

                    <h4 class="mb-4">Key MoU Partners:</h4>
                    <ul>
                        <li>ICT Academy</li>
                        <li>NSDC Skill Training Partner</li>
                        <li>Sutherland (Training Tie-up)</li>
                        <li>Local IT Training Companies</li>
                        <li>Industry Associations</li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">Our Achievements & Placement Statistics</h2>

                    <div class="row text-center">

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="single-achievement-box p-4 shadow-sm" style="border-radius: 12px; background: #ffffff;">
                                <h2 class="mb-2">@Model.OverallPlacementRate</h2>
                                <p style="margin: 0;">Overall Placement Rate</p>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="single-achievement-box p-4 shadow-sm" style="border-radius: 12px; background: #ffffff;">
                                <h2 class="mb-2">@Model.CompaniesVisited</h2>
                                <p style="margin: 0;">Companies Visited</p>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="single-achievement-box p-4 shadow-sm" style="border-radius: 12px; background: #ffffff;">
                                <h2 class="mb-2">@Model.StudentsPlaced</h2>
                                <p style="margin: 0;">Students Placed</p>
                            </div>
                        </div>

                        <div class="col-lg-3 col-md-6 mb-4">
                            <div class="single-achievement-box p-4 shadow-sm" style="border-radius: 12px; background: #ffffff;">
                                <h2 class="mb-2">@Model.MoUsSigned</h2>
                                <p style="margin: 0;">MoUs Signed</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">Placement Highlights</h2>
                    <div class="placement-slider owl-carousel owl-theme owl-loaded owl-drag">

                        @foreach (var item in Model.LstBanner)
                        {
                            <div class="company-slider-card style-3">
                                <div class="img">
                                    <img src="@Url.Content(item.ImagePath)" />
                                </div>
                            </div>
                        }

                    </div>

                    <div class="mt-3">
                        <p class="text-center">
                            Our college believes in shaping students into industry-ready professionals. We aim to provide the best opportunities and guide every student to achieve their career goals.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 mt-5">
                <div class="condition-content pr-20">
                    <h2 class="mb-4">Contact Information</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered align-middle text-center shadow-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>S.No</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td><strong>R. Mahalakshmi</strong></td>
                                    <td><a href="mailto:smkc_1997@yahoo.com">placement@smkc.com</a></td>
                                    <td><a href="tel:+919876543210">+91 9876543210</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Placement Area-->

