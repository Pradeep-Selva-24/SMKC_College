@using College.Entities
@model List<InstitutionPages>

@{
    ViewData["Title"] = "Vision & Mission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Start Page Banner-->
<div class="page-banner-area bg-1">
    <div class="container">
        <div class="page-banner-content">
            <h1>Vision & Mission</h1>
            <ul>
                <li><a href="~/">Home</a></li>
                <li>Vision & Mission</li>
            </ul>
        </div>
    </div>
</div>
<!--End Page Banner-->
<!--Start Vision & Mission Area-->
<div class="faq-area ptb-100 clsVisionMission">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6">
                <div class="faq-image pr-20">
                    <img class="clsImgStyle" src="~/img/visionmission/visionmission_1.jpeg" alt="Vision and Mission">
                </div>
            </div>

            <div class="col-lg-6">
                <div class="faq-left-content pl-20">
                    <div class="faq-title">
                        <h2>Our Vision & Mission</h2>
                        <p>Sree Muthukumaraswamy College is committed to academic excellence, character formation and holistic education that empowers students to serve society with knowledge, skill and integrity.</p>
                    </div>

                    <div class="accordion" id="accordionExample">

                        @{
                            bool expanded = true;
                        }

                        @foreach (var item in Model)
                        {
                            var headingId = $"heading_{item.Id}";
                            var collapseId = $"collapse_{item.Id}";

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button @(expanded ? "" : "collapsed")"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@collapseId"
                                            aria-expanded="@(expanded.ToString().ToLower())"
                                            aria-controls="@collapseId">
                                        @item.Heading
                                    </button>
                                </h2>

                                <div id="@collapseId"
                                     class="accordion-collapse collapse @(expanded ? "show" : "")"
                                     aria-labelledby="@headingId"
                                     data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        @Html.Raw(item.Content)
                                    </div>
                                </div>
                            </div>

                            expanded = false;
                        }

                    </div> 
                </div>
            </div>

        </div>
    </div>
</div>
<!--End Vision & Mission Area-->
<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-About").addClass("active");
        $("#navbarSupportedContent .clsMenu-VisionMission").addClass("active");
    });
</script>
