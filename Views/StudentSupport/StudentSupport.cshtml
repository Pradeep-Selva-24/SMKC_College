@using College.Entities
@model List<InstitutionPages>

@{
    ViewData["Title"] = "Student Support";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Start Page Banner-->
<div class="page-banner-area bg-2">
    <div class="container">
        <div class="page-banner-content">
            <h1>Student Support</h1>
            <ul>
                <li><a href="~/">Home</a></li>
                <li>Student Support</li>
            </ul>
        </div>
    </div>
</div>
<!--End Page Banner-->
<!--Start Student Support Area-->
<div class="faq-area ptb-100">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6">
                <div class="faq-image pr-20">
                    <img src="~/img/studentsupport/studentsupport_1.jpg" alt="Student Support">
                </div>
            </div>

            <div class="col-lg-6">
                <div class="faq-left-content pl-20">
                    <div class="faq-title">
                        <h2>Student Support Services</h2>
                        <p>Our college provides comprehensive support to ensure the well-being and career success of every student. Through Counselling and Career Guidance initiatives, we help students build confidence, emotional balance and employability skills for a successful future.</p>
                    </div>

                    <div class="accordion" id="studentSupportAccordion">

                        @{
                            bool expanded = true;
                        }

                        @foreach (var item in Model)
                        {
                            var headingId = $"heading_{item.Id}";
                            var collapseId = $"collapse_{item.Id}";

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button @(expanded ? "" : "collapsed")"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@collapseId"
                                            aria-expanded="@(expanded.ToString().ToLower())"
                                            aria-controls="@collapseId">
                                        @item.Heading
                                    </button>
                                </h2>

                                <div id="@collapseId"
                                     class="accordion-collapse collapse @(expanded ? "show" : "")"
                                     aria-labelledby="@headingId"
                                     data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        @Html.Raw(item.Content)
                                    </div>
                                </div>
                            </div>

                            expanded = false;
                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!--End Student Support Area-->

<script>
    $(document).ready(function(){
        $("#navbarSupportedContent .nav-link").removeClass("active");
        $("#navbarSupportedContent .clsMenu-CampusLife").addClass("active");
        $("#navbarSupportedContent .clsMenu-StudentSupport").addClass("active");
    });
</script>