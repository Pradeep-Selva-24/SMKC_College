@{
    ViewData["Title"] = "Placement Highlights";
    Layout = "_AdminLayout";
}

<div class="page-container clsPageMedia">

    <div class="form-card">

        <div class="page-header-card">
            <h4 class="page-title">Placement Highlights</h4>
            <button type="button" class="btn btn-primary view-btn clsView" onclick="Add()">Add</button>
            <button type="button" class="btn btn-primary view-btn clsAdd clsEdit" onclick="View('Placement_Company')">View</button>
        </div>

        <div class="clsView">
            <div class="row g-3">
                <div class="col-lg-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" id="categoryView">
                        <option value="">-- Select Category --</option>
                        <option value="Placement_Company">Company Log</option>
                        <option value="Placement_Banner">Banner</option>
                    </select>
                </div>
            </div>
            <div class="row g-3 mt-20" id="ViewPageMedia">
            </div>

        </div>

        <div class="clsAdd clsEdit">
            <div id="msg"></div>

            <div class="row g-4">
                <input type="hidden" id="Key" value="" />
                <div class="col-lg-6">
                    <label class="form-label">Category</label>
                    <select class="form-select" id="category">
                        <option value="">-- Select Category --</option>
                        <option value="Placement_Company">Company Log</option>
                        <option value="Placement_Banner">Banner</option>
                    </select>
                </div>

                <div class="col-lg-6">
                    <label class="form-label">Image</label>
                    <input type="file" class="form-control" id="imageInput" accept="image/*">
                </div>

                <div class="col-12 text-center">
                    <img id="preview" style="display:none;">
                </div>

                <div class="col-lg-6">
                    <label>Display Order</label>
                    <input type="number" id="displayOrder" class="form-control" value="1">
                </div>

            </div>

            <div class="action-buttons">
                <button class="btn-cancel clsAdd" onclick="resetForm()">Cancel</button>
                <button class="btn-submit clsAdd" onclick="Save()">Save</button>
                <button class="btn-submit clsEdit" onclick="Save()">Update</button>
            </div>
        </div>

    </div>
</div>

<script>

    var cropper = null;
    var imageChanged = false;

    $(document).ready(function () {
        View('Placement_Company')
    });

    $('#categoryView').on('change', function () {
        var selectedCategory = $(this).val();

        if (selectedCategory === "") {
            console.log("No category selected");
            return;
        }

        DataLoad(selectedCategory);
    });

    function View(category){
        resetForm()
        $(".clsView").show();
        $(".clsAdd, .clsEdit").hide();
        $('#categoryView').val(category).trigger('change');
    }

    function Add(){
        resetForm()
        $(".clsView, .clsEdit").hide();
        $(".clsAdd").show();
    }

    function resetForm() {
        $('#Key').val('');
        $('#category').val('');
        $('#category').prop('disabled', false);
        $('#displayOrder').val(1);
        $('#imageInput').val('');

        if (cropper) {
            cropper.destroy();
            cropper = null;
        }
        imageChanged = false;

        $('#preview').attr('src', '').hide();
    }

    function DataLoad(Category){
        LoaderShow();
        $("#ViewPageMedia").html('');
        $.ajax({
            url: '/Admin/GetPageMedia',
            type: 'GET',
            data: { Category: Category },
            success: function(response) {
                if(response.message === "Success") {
                    var data = JSON.parse(response.result);

                    var Content = Buind(data);

                    if(Content.length > 0){
                        $("#ViewPageMedia").html(Content);
                    }

                } else {
                    alert('Failed to load data.');
                }
                LoaderHide();
            },
            error: function(err) {
                console.error(err);
                alert('Error while loading data.');
                LoaderHide();
            }
        });
    }

    function Buind(data){
        var str = "";
        let randomNum = (Math.random() * 5).toFixed(2);
        $.each(data, function (i, y) {
            str += '<div class="col-lg-4 col-md-6">';
            str += '<div class="PageMedia-card">';

            str += '<div class="PageMedia-img">';
            str += '<img src="' +y["ImagePath"]+ '?V' + randomNum + '" alt="Image">';
            str += '</div>';

            str += '<div class="PageMedia-body">';
            str += '<div class="PageMedia-title"></div>';

            str += '<div class="PageMedia-actions">';

            if(y["Status"]){
                str += '<a href="javascript:void(0);" onclick="Edit(' +y["Id"]+ ')" class="text-primary" title="Edit">';
                str += '<i class="bi bi-pencil-square"></i>';
                str += '</a>';

                str += '<a href="javascript:void(0);" onclick="StatusUpdate(' +y["Id"]+ ', false)" class="text-danger" title="Delete">';
                str += '<i class="bi bi-trash"></i>';
                str += '</a>';
            }
            else{
                str += '<a href="javascript:void(0);" onclick="StatusUpdate(' +y["Id"]+ ', true)" class="text-success" title="Activate">';
                str += '<i class="bi bi-check-circle fs-5"></i>';
                str += '</a>';
            }

            str += '</div>';
            str += '</div>';
            str += '</div>';
            str += '</div>';
        })

        return str;
    }

    function StatusUpdate(Id, status) {
        LoaderShow();
        $.ajax({
            url: '/Admin/StatusUpdatePageMedia',
            type: 'POST',
            data: { Id: Id, IsStatus: status },
            success: function(response){
                alert(response.message);
                if(response.message.includes("Successfully")){
                    $('#categoryView').trigger('change');
                }
                LoaderHide();
            },
            error: function(err){
                console.error(err);
                alert('Error while saving data.');
                LoaderHide();
            }
        });
    }

    function Edit(Id){
        resetForm()
        $('#category').prop('disabled', true);
        $(".clsView, .clsAdd").hide();
        $(".clsEdit").show();
        $('#Key').val(Id)
        LoaderShow();
        $.ajax({
            url: '/Admin/GetPageMediaById',
            type: 'GET',
            data: { Id: Id },
            success: function(response) {
                if(response.message === "Success") {
                    var data = JSON.parse(response.result);

                    $('#category').val(data.Category);
                    $('#displayOrder').val(data.DisplayOrder);

                    loadImageForEdit(data.ImagePath)
                } 
                else {
                    alert('Failed to load data.');
                }
                LoaderHide();
            },
            error: function(err) {
                console.error(err);
                alert('Error while loading data.');
                LoaderHide();
            }
        });
    }

    const categorySettings = {
        "Placement_Company": { width: 1920, height: 1080, aspectRatio: 16 / 9 },
        "Placement_Banner": { width: 1920, height: 1080, aspectRatio: 16 / 9 }
    };

    function getSelectedSetting() {
        var category = $('#category').val();
        return categorySettings[category];
    }

    // Image change
    $('#imageInput').on('change', function (e) {

        var file = e.target.files[0];
        if (!file) return;

        var setting = getSelectedSetting();
        if (!setting) {
            alert("Please select Category first!");
            $('#imageInput').val('');
            return;
        }

        LoaderShow();
        cropperReady = false;

        var reader = new FileReader();
        reader.onload = function () {

            var img = document.getElementById('preview');
            img.onload = function () {

                if (cropper) {
                    cropper.destroy();
                }

                cropper = new Cropper(img, {
                    aspectRatio: setting.aspectRatio,
                    viewMode: 1,
                    ready() {
                        cropperReady = true;
                        LoaderHide();
                    }
                });
            };

            $('#preview').attr('src', reader.result).show();
        };

        reader.readAsDataURL(file);
    });

    function loadImageForEdit(imageUrl) {
        if (!imageUrl) return;

        var setting = getSelectedSetting();
        if (!setting) return;

        LoaderShow();
        cropperReady = false;

        var img = document.getElementById('preview');

        img.onload = function () {
            if (cropper) {
                cropper.destroy();
            }

            cropper = new Cropper(img, {
                aspectRatio: setting.aspectRatio,
                viewMode: 1,
                ready() {
                    cropperReady = true;
                    LoaderHide();
                }
            });
        };

        $('#preview')
            .attr('src', imageUrl + '?t=' + new Date().getTime())
            .show();
    }

    function Save() {

        var category = $('#category').val();
        var id = $('#Key').val() || 0;

        if (!category) {
            alert("Please select Category");
            return;
        }

        if (!cropper && id == 0) {
            alert("Please select and crop an image");
            return;
        }

        if (cropper && !cropperReady) {
            alert("Image is still loading. Please wait and try again.");
            return;
        }

        var formData = new FormData();
        formData.append("Id", id);
        formData.append("category", category);
        formData.append("heading", '');
        formData.append("shortContent", '');
        formData.append("displayOrder", $('#displayOrder').val());
        formData.append("date",'');

        LoaderShow();

        if (cropper) {
            var setting = getSelectedSetting();

            cropper.getCroppedCanvas({
                width: setting.width,
                height: setting.height
            }).toBlob(function (blob) {

                if (!blob) {
                    alert("Image processing failed. Try again.");
                    LoaderHide();
                    return;
                }

                formData.append("bannerImage", blob, "banner.jpg");
                sendRequest(formData);

            }, "image/jpeg", 0.9);
        }
        else {
            sendRequest(formData);
        }
    }

    function sendRequest(formData) {
        $.ajax({
            url: "/Admin/SavePageMedia",
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (data) {
                alert(data.message);

                if (data.message && data.message.toLowerCase().includes("success")) {
                    View(formData.get("category"));
                }

                LoaderHide();
            },
            error: function (xhr, status, error) {
                console.error(error);
                alert('Error while saving data.');
                LoaderHide();
            }
        });
    }

</script>

