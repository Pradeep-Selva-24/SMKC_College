@{
    ViewData["Title"] = "Placement Contact";
    Layout = "_AdminLayout";
}

<div class="page-container">
    <div class="form-card">

        <div class="page-header-card">
            <h4 class="page-title">Placement Contact</h4>
            <button type="button" class="btn btn-primary view-btn clsView" onclick="Add()">Add</button>
            <button type="button" class="btn btn-primary view-btn clsAdd clsEdit" onclick="View()">View</button>
        </div>

        <div class="row g-4 clsView">
            <div class="col-lg-12">
                <table id="tblGrid" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

        <div class="clsAdd clsEdit">
            <div class="row g-4 ">
                <input type="hidden" id="Key" value="" />

                <div class="col-lg-6">
                    <label>Name</label>
                    <input type="text" id="Name" class="form-control">
                </div>

                <div class="col-lg-6">
                    <label>Email</label>
                    <input type="text" id="Email" class="form-control">
                </div>

                <div class="col-lg-6">
                    <label>Phone</label>
                    <input type="text" id="Phone" class="form-control number-only" maxlength="10">
                </div>

                <div class="col-lg-6">
                    <label>Display Order</label>
                    <input type="number" id="DisplayOrder" class="form-control" value="1">
                </div>

            </div>

            <div class="action-buttons">
                <button class="btn-cancel clsAdd" onclick="resetForm()">Cancel</button>
                <button class="btn-submit clsAdd" onclick="Save()">Save</button>
                <button class="btn-submit clsEdit" onclick="Save()">Update</button>
            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {
        View()
    });

     function resetForm() {
        $('#Key').val('')
        $('#Name').val('');
        $('#Email').val('');
        $('#Phone').val('');
        $('#DisplayOrder').val(0);
    }

    function View(){
        resetForm()
        $(".clsView").show();
        $(".clsAdd, .clsEdit").hide();
        LoaderShow();
        Grid();
        LoaderHide();
    }

    function Add(){
        resetForm()
        $(".clsView, .clsEdit").hide();
        $(".clsAdd").show();
    }

    function Edit(Id){
        resetForm()
        $(".clsView, .clsAdd").hide();
        $(".clsEdit").show();
        $('#Key').val(Id)
        LoaderShow();
        $.ajax({
            url: '/Admin/GetPlacementContactById',
            type: 'GET',
            data: { Id: Id },
            success: function(response) {
                if(response.message === "Success") {
                    var data = JSON.parse(response.result);

                    $('#Name').val(data.Name);
                    $('#Email').val(data.Email);
                    $('#Phone').val(data.Phone);
                    $('#DisplayOrder').val(data.DisplayOrder);

                } else {
                    alert('Failed to load data.');
                }
                LoaderHide();
            },
            error: function(err) {
                console.error(err);
                alert('Error while loading data.');
                LoaderHide();
            }
        });
    }

     function Save() {
         var Name  = $('#Name').val().trim();
        var Email  = $('#Email').val().trim();
        var Phone  = $('#Phone').val().trim();
        var DisplayOrder  = $('#DisplayOrder').val().trim();

        // Validation
        if(Name === ""){
            alert('Please enter Name.');
            $('#Name').focus();
            return;
        }

        if(Email === ""){
            alert('Please enter Email.');
            $('#Email').focus();
            return;
        }

        if(Phone === ""){
            alert('Please enter Phone.');
            $('#Phone').focus();
            return;
        }

        if(DisplayOrder === 0){
            alert('Please enter Display Order.');
            $('#DisplayOrder').focus();
            return;
        }

        var data = {
            Id: ($('#Key').val() != "" ? $('#Key').val() : 0),
            Name: Name,
            Email: Email,
            Phone: Phone,
            DisplayOrder: DisplayOrder
        }

        LoaderShow();
        $.ajax({
            url: '/Admin/SavePlacementContact',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response){
                alert(response.message);
                if(response.message.includes("Successfully")){
                    View();
                }
                LoaderHide();
            },
            error: function(err){
                console.error(err);
                alert('Error while saving data.');
                LoaderHide();
            }
        });
    }


    function StatusUpdate(Id, status) {
        LoaderShow();
        $.ajax({
            url: '/Admin/StatusUpdatePlacementContact',
            type: 'POST',
            data: { Id: Id, IsStatus: status },
            success: function(response){
                alert(response.message);
                if(response.message.includes("Successfully")){
                    View();
                }
                LoaderHide();
            },
            error: function(err){
                console.error(err);
                alert('Error while saving data.');
                LoaderHide();
            }
        });
    }

    function Grid(){
        if ($.fn.DataTable.isDataTable('#tblGrid')) {
            $('#tblGrid').DataTable().destroy();
            $('#tblGrid tbody').empty();
        }

        $('#tblGrid').DataTable({
            ajax: {
                url: '/Admin/GetPlacementContact',
                type: 'GET',
                dataSrc: ''
            },
            pageLength: 10,
            lengthMenu: [5, 10, 25, 50],
            searching: true,
            ordering: true,
            responsive: true,

            columns: [
                { data: "name", title: "Name" },
                { data: "email", title: "Email" },
                { data: "phone", title: "Phone" },
                { data: "status", title: "Status" },
                {
                    data: null,
                    title: "Action",
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        let actionHtml ='';

                        if (row.status === true) {
                            actionHtml = `<a href="javascript:void(0);"onclick="Edit(${row.id})"class="text-primary me-2" title="Edit"><i class="bi bi-pencil-square fs-5"></i></a>`;
                            actionHtml += `<a href="javascript:void(0);"onclick="StatusUpdate(${row.id}, false)"class="text-danger" title="Delete"><i class="bi bi-trash fs-5"></i></a>`;
                        } else {
                            actionHtml += `<a href="javascript:void(0);"onclick="StatusUpdate(${row.id}, true)"class="text-success" title="Activate"><i class="bi bi-check-circle fs-5"></i></a>`;
                        }
                        return actionHtml;
                    }
                }
            ]
        });
    }

    $(document).on('input', '.number-only', function () {
        this.value = this.value.replace(/[^0-9]/g, '');
    });

    $(document).on('keypress', '.number-only', function (e) {
        if (e.which < 48 || e.which > 57) {
            e.preventDefault();
        }
    });
</script>