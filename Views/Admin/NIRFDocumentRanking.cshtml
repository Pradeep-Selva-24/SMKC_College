@{
    ViewData["Title"] = "NIRF Ranking";
    Layout = "_AdminLayout";
}

<div class="page-container">
    <div class="form-card">

        <div class="page-header-card">
            <h4 class="page-title">NIRF Ranking</h4>
            <button type="button" class="btn btn-primary view-btn clsView" onclick="Add()">Add</button>
            <button type="button" class="btn btn-primary view-btn clsAdd clsEdit" onclick="View()">View</button>
        </div>

        <div class="row g-4 clsView">
            <div class="col-lg-12">
                <table id="tblGrid" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Year</th>
                            <th>Category</th>
                            <th>Participation Status</th>
                            <th>Score</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>

        <div class="clsAdd clsEdit">
            <div class="row g-4 ">
                <input type="hidden" id="Key" value="" />

                <div class="col-lg-6">
                    <label>Year</label>
                    <input type="text" id="Year" class="form-control number-only">
                </div>

                <div class="col-lg-6">
                    <label>Category</label>
                    <input type="text" id="Category" class="form-control">
                </div>

                <div class="col-lg-6">
                    <label>Participation Status</label>
                    <input type="text" id="ParticipationStatus" class="form-control">
                </div>

                <div class="col-lg-6">
                    <label>Score</label>
                    <input type="text" id="Score" class="form-control">
                </div>

            </div>

            <div class="action-buttons">
                <button class="btn-cancel clsAdd" onclick="resetForm()">Cancel</button>
                <button class="btn-submit clsAdd" onclick="Save()">Save</button>
                <button class="btn-submit clsEdit" onclick="Save()">Update</button>
            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {
        View()
    });

     function resetForm() {
        $('#Key').val('')
        $('#Year').val('');
        $('#Category').val('');
        $('#ParticipationStatus').val('');
        $('#Score').val('');
    }

    function View(){
        resetForm()
        $(".clsView").show();
        $(".clsAdd, .clsEdit").hide();
        LoaderShow();
        Grid();
        LoaderHide();
    }

    function Add(){
        resetForm()
        $(".clsView, .clsEdit").hide();
        $(".clsAdd").show();
    }

    function Edit(Id){
        resetForm()
        $(".clsView, .clsAdd").hide();
        $(".clsEdit").show();
        $('#Key').val(Id)
        LoaderShow();
        $.ajax({
            url: '/Admin/GetNIRFDocumentRankingById',
            type: 'GET',
            data: { Id: Id },
            success: function(response) {
                if(response.message === "Success") {
                    var data = JSON.parse(response.result);

                    $('#Year').val(data.Year);
                    $('#Category').val(data.Category);
                    $('#ParticipationStatus').val(data.ParticipationStatus);
                    $('#Score').val(data.Score);

                } else {
                    alert('Failed to load data.');
                }
                LoaderHide();
            },
            error: function(err) {
                console.error(err);
                alert('Error while loading data.');
                LoaderHide();
            }
        });
    }

     function Save() {
        var Year  = $('#Year').val().trim();
        var Category  = $('#Category').val().trim();
        var ParticipationStatus  = $('#ParticipationStatus').val().trim();
        var Score  = $('#Score').val().trim();

        // Validation
        if(Year === ""){
            alert('Please enter Year.');
            $('#Year').focus();
            return;
        }

        if(Category === ""){
            alert('Please enter Category.');
            $('#Category').focus();
            return;
        }

        if(ParticipationStatus === ""){
            alert('Please enter Participation Status.');
            $('#ParticipationStatus').focus();
            return;
        }

        if(Score === ""){
            alert('Please enter Score.');
            $('#Score').focus();
            return;
        }

        var data = {
            Id: ($('#Key').val() != "" ? $('#Key').val() : 0),
            Year: Year,
            Category: Category,
            ParticipationStatus: ParticipationStatus,
            Score: Score
        }

        LoaderShow();
        $.ajax({
            url: '/Admin/SaveNIRFDocumentRanking',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response){
                alert(response.message);
                if(response.message.includes("Successfully")){
                    View();
                }
                LoaderHide();
            },
            error: function(err){
                console.error(err);
                alert('Error while saving data.');
                LoaderHide();
            }
        });
    }


    function StatusUpdate(Id, status) {
        LoaderShow();
        $.ajax({
            url: '/Admin/StatusUpdateNIRFDocumentRanking',
            type: 'POST',
            data: { Id: Id, IsStatus: status },
            success: function(response){
                alert(response.message);
                if(response.message.includes("Successfully")){
                    View();
                }
                LoaderHide();
            },
            error: function(err){
                console.error(err);
                alert('Error while saving data.');
                LoaderHide();
            }
        });
    }

    function Grid(){
        if ($.fn.DataTable.isDataTable('#tblGrid')) {
            $('#tblGrid').DataTable().destroy();
            $('#tblGrid tbody').empty();
        }

        $('#tblGrid').DataTable({
            ajax: {
                url: '/Admin/GetNIRFDocumentRanking',
                type: 'GET',
                dataSrc: ''
            },
            pageLength: 10,
            lengthMenu: [5, 10, 25, 50],
            searching: true,
            ordering: true,
            responsive: true,

            columns: [
                { data: "year", title: "Year" },
                { data: "category", title: "Category" },
                { data: "participationStatus", title: "Participation Status" },
                { data: "score", title: "Score" },
                { data: "status", title: "Status" },
                {
                    data: null,
                    title: "Action",
                    orderable: false,
                    searchable: false,
                    render: function (data, type, row) {
                        let actionHtml ='';

                        if (row.status === true) {
                            actionHtml = `<a href="javascript:void(0);"onclick="Edit(${row.id})"class="text-primary me-2" title="Edit"><i class="bi bi-pencil-square fs-5"></i></a>`;
                            actionHtml += `<a href="javascript:void(0);"onclick="StatusUpdate(${row.id}, false)"class="text-danger" title="Delete"><i class="bi bi-trash fs-5"></i></a>`;
                        } else {
                            actionHtml += `<a href="javascript:void(0);"onclick="StatusUpdate(${row.id}, true)"class="text-success" title="Activate"><i class="bi bi-check-circle fs-5"></i></a>`;
                        }
                        return actionHtml;
                    }
                }
            ]
        });
    }

    $(document).on('input', '.number-only', function () {
        this.value = this.value.replace(/[^0-9]/g, '');
    });

    $(document).on('keypress', '.number-only', function (e) {
        if (e.which < 48 || e.which > 57) {
            e.preventDefault();
        }
    });
</script>